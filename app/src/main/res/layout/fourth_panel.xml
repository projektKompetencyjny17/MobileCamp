<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.project.mobilecamp.FourthPanelActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tlo"
        android:theme="@style/AppTheme.AppBarOverlay">



        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

        <TextView
            android:id="@+id/textview2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wynik wyszukiwań"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="10dp"
            android:textSize="25dp"
            />

        <HorizontalScrollView
            android:id="@+id/horizontalScroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.example.project.mobilecamp.MaxHeightScrollView
                android:id="@+id/verticalScroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:maxHeight="300dp">
                <RelativeLayout
                    android:id="@+id/realtiveLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/map"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:src="@drawable/map"
                        />
                </RelativeLayout>
            </com.example.project.mobilecamp.MaxHeightScrollView>
        </HorizontalScrollView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Miejsca które miniesz po drodze:"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:textSize="18dp"
            />

        <TextView
            android:id="@+id/textview3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:textSize="15dp"
            android:inputType="textMultiLine"
            android:singleLine="false"
            />

        <Button
            android:id="@+id/button8"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Powrót"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            />




    </android.support.design.widget.AppBarLayout>




</ScrollView>

